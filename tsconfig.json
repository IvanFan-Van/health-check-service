{
	"compilerOptions": {
		"target": "es6",
		"module": "es2022",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noImplicitAny": false
	},
	"include": ["src/**/*.ts", "./*.ts"],
	"exclude": ["node_modules"]
}
